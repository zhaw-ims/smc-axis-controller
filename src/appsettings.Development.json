{
  "DetailedErrors": true,
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.File"
    ],
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Debug"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "restrictedToMinimumLevel": "Error"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/log.txt",
          "rollingInterval": "Day"
        }
      }
    ],
    "Destructure": [
      {
        "Name": "ToMaximumDepth",
        "Args": {
          "maximumDestructuringDepth": 5
        }
      }
    ]
  },
  "Controllers" : [
    {
      "Name": "Gripper",
      "Ip": "192.168.1.2"
    },
    {
      "Name": "X-Axis",
      "Ip": "192.168.1.3"
    }
  ],
  "Swagger": {
    "Enabled": true,
    "Title": "SMC Axis Controller API",
    "Version": "v1",
    "Description": "API for controlling SMC Axis hardware.",
    "RoutePrefix": "swagger"
  },
  "Sequences" : [
    {
      "Name": "Homing",
      "TargetPositions": [
        {
          "Name": "Gripper",
          "Speed": 20,
          "Position": 0
        },
        {
          "Name": "X-Axis",
          "Speed": 20,
          "Position": 0
        }
      ]
    },
    {
      "Name": "SampleHolder",
      "TargetPositions": [
        {
          "Name": "Gripper",
          "Speed": 20,
          "Position": 500
        },
        {
          "Name": "X-Axis",
          "Speed": 20,
          "Position": 1000
        }
      ]
    }
  ]
}

