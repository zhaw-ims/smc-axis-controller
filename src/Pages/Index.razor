                Snackbar.Add($"Error: {ex.Message}", Severity.Error);
            }
        }
    }
    
    private async Task InvokeAlarmResetAsync()
    {
        if (Vm.CurrentSmcEthernetIpConnector != null)
        {
            try
            {
                await Task.Run(() => Vm.CurrentSmcEthernetIpConnector.AlarmReset());
