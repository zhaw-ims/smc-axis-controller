@page "/"
@using SMCAxisController.Hardware
@using SMCAxisController.DataModel
@using SMCAxisController.StateMachine
@using System.Text.Json
@inject ISnackbar Snackbar
@inject IIndexVm Vm
@inject IStateMachine StateMachine
@* @inject IJSRuntime JS *@
@implements IDisposable

<PageTitle>SMC Connector</PageTitle>
<MudPaper Class="pa-16 ma-2" Elevation="3">
    <MudStack Row="true" Spacing="10">
        <MudSelect T="string" Label="Controller Name:" ValueChanged="@OnSelectedControllerChanged" Style="width: 200px;">
            @foreach (var controllerName in Vm.GetAllControllerNames())
            {
                <MudSelectItem Value="controllerName">@controllerName</MudSelectItem>
            }
        </MudSelect>
        <MudText Typo="Typo.h5"> IP: @(Vm.CurrentSmcEthernetIpConnector != null ? Vm.CurrentSmcEthernetIpConnector.ControllerProperties.Ip : "not availabe") </MudText>
        <MudText Typo="Typo.h5"> Status: @(Vm.CurrentSmcEthernetIpConnector != null ? Vm.CurrentSmcEthernetIpConnector.Status.ToString() : "not availabe") </MudText>
    </MudStack>
</MudPaper>


<MudPaper Class="pa-16 ma-2" Elevation="3">
    <MudText Typo="Typo.h5"> State Machine Controlls. Current State: @StateMachine.State.ToString() </MudText> 
    <br/>
    <MudStack Row="true" Spacing="10">

        <MudButton Variant="Variant.Filled" Color="Color.Primary" OnClick="@(() => StateMachine.Fire(RobotTrigger.PowerOnAll))">
            PowerOn All Axis
        </MudButton>
        
        <MudButton Variant="Variant.Filled" Color="Color.Primary" OnClick="@(() => StateMachine.Fire(RobotTrigger.ReturnAllToOrigin))">
            Return To Origin All Axis
        </MudButton>
        
        <MudStack>
            <MudItem>
                <MudTextField T="string" @bind-value="_sequence" Label="Sequence Name" Variant="Variant.Text"></MudTextField>
            </MudItem>

            <MudButton Variant="Variant.Filled" Color="Color.Primary" OnClick="@(() => StateMachine.FireRunSequence(_sequence))">
                Run Sequence
            </MudButton>
        </MudStack>

        <MudStack>
            <MudItem>
                <MudTextField T="string" @bind-value="_flow" Label="Flow Name" Variant="Variant.Text"></MudTextField>
            </MudItem>

            <MudButton Variant="Variant.Filled" Color="Color.Primary" OnClick="@(() => StateMachine.FireRunFlow(_flow))">
                Run Flow
            </MudButton>
        </MudStack>

        <MudButton Variant="Variant.Filled" Color="Color.Primary" OnClick="@(() => StateMachine.Fire(RobotTrigger.ClearError))">
            Clear Error
        </MudButton>
    </MudStack>
    
    @if(StateMachine.LastError.Severity != ErrorSeverity.NoError)
    {                                                                           
        <MudText Typo="Typo.body1">
            Error: <br/>
            <pre>@JsonSerializer.Serialize(StateMachine.LastError, new JsonSerializerOptions { WriteIndented = true })</pre>
        </MudText>
    }

    
</MudPaper>


