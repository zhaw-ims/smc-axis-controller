            }
            catch (Exception ex)
            {
                Snackbar.Add($"Error: {ex.Message}", Severity.Error);
            }
        }
    }
    
    private void SnackBarMessage(string message, MudBlazor.Severity severity) {
        Snackbar.Add(message, severity);
    }

    public void Dispose()                                        
